{
  "name": "game-news-forge-api",
  "version": "1.0.0",
  "description": "Backend Express API for Game Watcher",
  "main": "src/server.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=dev node src/server.js",
    "start:prod": "cross-env NODE_ENV=prod node src/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit": "cross-env NODE_ENV=test jest --testMatch=\"**/tests/unit/**/*.test.js\"",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch=\"**/tests/integration/**/*.test.js\"",
    "test:e2e": "cross-env NODE_ENV=test jest --testMatch=\"**/tests/e2e/**/*.test.js\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.2.1",
    "mariadb": "^3.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "sinon": "^17.0.1",
    "node-mocks-http": "^1.13.0",
    "@faker-js/faker": "^8.3.1"
  }
}
